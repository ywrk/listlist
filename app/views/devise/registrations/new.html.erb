<div class="main-content">
<div class="login-content">
  <p class="main-copy">Listのスペシャリストになろう</p>
  <%= image_tag("main_logo.png", alt: "メインロゴ画像", class: "main-logo") %>

<%= form_with(model: @user, url: user_registration_path, class: 'registration-main', local: true)do |f| %>
<div class='field'>

  <%# <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム（8文字まで）", maxlength:"8" %>
  </div>

  <div class="field">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード（6文字以上の半角英数字）" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div>
    <%= f.submit "新規登録する" ,class:"register-btn" %>
  </div>

</div>
<% end %>

</div>
</div>


