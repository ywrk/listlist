<div class="main-content">
<div class="login-content">
  <p class="main-copy">Listのスペシャリストになろう</p>
  <%= image_tag("main_logo.png", alt: "メインロゴ画像", class: "main-logo") %>

  <%= form_with model: @user, url: user_session_path, class: 'new_user', local: true do |f| %>
<div class='field'>

  <%= render 'devise/shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
  </div>


  <div class='actions'>
    <%= f.submit "ログイン" , class:"login-btn" %>
  </div>
</div>
<% end %>

  <div class="">
  <%= link_to 'ゲストログイン（閲覧用）', users_sign_in_guest_sign_in_path, method: :post ,class: "guest-login-btn"%> 
  </div>

</div>
</div>
